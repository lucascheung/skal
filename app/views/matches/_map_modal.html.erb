<div id="mapModal" class="modal fade map-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div id="map-modal-insert" class="map-modal-body">
        <div
          id="map"
          style="width: 100%;
              height: 400px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
        <a type="button" href="#" class="btn-close stick" data-dismiss="modal"><i class="fas fa-times"></i></a>
      </div>
    </div>
  </div>
</div>
