<%= render 'shared/navbar' %>
<div class="tinder">
  <div class="tinder--status">
    <i class="fas fa-times"></i>
    <i class="fa fa-heart"></i>
  </div>
  <div class="tinder--cards">
    <% @users.each do |user| %>
      <% url = image_path user.photos[0].photo.url %>
      <div class="tinder--card" id=<%= "card#{user.id}" %> style="background-image: linear-gradient(180deg, rgba(0,0,0,0) 80%, rgba(0,0,0,0.8) 100%), url('<%= url %>');" >
        <h3><%= "#{user.name}, #{user.age}" %></h3>
      </div>
    <% end %>
  </div>
</div>
